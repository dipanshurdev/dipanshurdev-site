---
import { Footer } from "../components";
import Navbar from "../components/Navbar/Navbar";
import Layout from "./Layout.astro";
import "@fontsource-variable/dosis";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <main
    class="flex items-center justify-between flex-col mx-auto p-4 w-full h-full min-h-screen overflow-y-scroll overflow-x-hidden max-w-[70rem] sm:max-w-screen-lg text-1.5rem leading-1.6"
  >
    <Navbar client:load />
    <slot />
    <Footer />
  </main>
</Layout>

<style>
  main {
    font-family: "Dosis Variable";
  }
</style>
