---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar/Navbar";
import Layout from "./Layout.astro";
import "@fontsource-variable/dosis";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <main
    class="flex items-center justify-between flex-col mx-auto px-4 sm:p-4 sm:px-6 w-full min-h-screen max-w-[70rem] sm:max-w-screen-lg leading-relaxed pb-24 sm:pb-8"
  >
    <Navbar client:load />
    <slot />
    <Footer />
  </main>
</Layout>

<style>
  main {
    font-family: "Dosis Variable";
  }
</style>
