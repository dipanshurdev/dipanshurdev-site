---
import "@fontsource-variable/dosis";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="A SDE, Founder, and OpenSource Contributor, Dipanshu Rawat's Portfolio site."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="dark:text-light text-dark dark:bg-lowDarkGradient bg-lightGradientMain"
  >
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --primary: 37 99 235;
    --secondary: 79 70 229;
    --background: 255 255 255;
    --surface: 244 244 245;
    --text-muted: 82 82 91;
  }

  .dark {
    --primary: 96 165 250;
    --secondary: 129 140 248;
    --background: 9 9 11;
    --surface: 24 24 27;
    --text-muted: 161 161 170;
  }

  body {
    scrollbar-width: thin;
    overflow-x: hidden;
    min-height: 100vh;
    width: 100%;
    font-family: "Dosis Variable";
  }

  /* Scrollbar Style*/
  ::-webkit-scrollbar {
    width: 16px;
  }

  ::-webkit-scrollbar-thumb {
    background-clip: content-box;
    background-color: #e5e7eb;
    border: 5px solid transparent;
    border-radius: 20px;
    transition: background-color 500ms ease-in-out;
  }
</style>
